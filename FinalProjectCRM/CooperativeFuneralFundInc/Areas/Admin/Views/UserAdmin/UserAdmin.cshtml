@using CooperativeFuneralFundInc.Areas.Admin.Models;
@using CooperativeFuneralFundInc.Models.UserManagement;
@using CooperativeFuneralFundInc.Models.TasksManagement;
@using CooperativeFuneralFundInc.Models.SupplyRequest;
@using CooperativeFuneralFundInc.Models.DropDownMenu;

@model UserViewModel
@{
    ViewData["Title"] = " | Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-2">Manage Users</h1>

<h5 class="mt-2"><a asp-action="Add">Add a User</a></h5>


<div class="col-md-12 ">
    <div class="card h-100">
        <div class="card-body">
            <table class="table table-bordered table-striped table-sm">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Role</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th> Phone Number </th>
                        <th> Email</th>
                        <th>Number Type</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>
                                @foreach (string roleName in user.RoleNames)
                                {
                                    <div>@roleName</div>
                                }
                            </td>
                            <td>@user.firstName</td>
                            <td>@user.lastName</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@user.numberType</td>
                            <td>
                                <form formaction="Delete">
                                    <a class="btn btn-outline-danger" type="submit">Delete User</a>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<h1 class="mb-2">Manage Roles</h1>

@if (Model.Roles.Count() == 0)
{
    <form method="post" asp-action="CreateAdminRole">
        <button type="submit" class="btn btn-primary">
            Create Admin Role
        </button>
    </form>
}
else
{
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr><th>Role</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <form method="post" asp-action="DeleteRole"
                              asp-route-id="@role.Id">
                            <button type="submit" class="btn btn-primary">
                                Delete Role
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
