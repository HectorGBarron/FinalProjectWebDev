@model CooperativeFuneralFundInc.Models.ClientManagement.Client

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClientID" />
            <div class="form-group">
                <label asp-for="ClientName" class="control-label"></label>
                <input asp-for="ClientName" class="form-control" />
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Documents" class="control-label"></label>
                <input asp-for="Documents" class="form-control" />
                <span asp-validation-for="Documents" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Branding" class="control-label"></label>
                <input asp-for="Branding" class="form-control" />
                <span asp-validation-for="Branding" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@using CooperativeFuneralFundInc.Models.ClientManagement

@foreach (ListClientContacts note in ViewBag.notesList)
{
    <form>
        <div class="form-row">
            <div class="form-group col-md-3">
                <label>
                    First Name
                </label>
                <input type="text" class="form-control" value="@note.fName" />
            </div>
            <div class="form-group col-md-3">
                <label>
                    Last Name
                </label>
                <input type="text" class="form-control" value="@note.lName" />
            </div>

            <div class="form-group col-md-4">
                <label>
                    Email
                </label>
                <input type="text" class="form-control" value="@note.email" />
            </div>
            <div class="form-group col-md-2">
                <label>
                    Phone Number
                </label>
                <input type="text" class="form-control" value="@note.phoneNumber" />
            </div>
            <div class="invisible">
                @note.Client.ClientID
            </div>
        </div>


    </form>

}


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
